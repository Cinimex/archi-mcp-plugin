<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <!-- MCP plugin: starts server on workbench startup and exposes toolbar toggle and preferences -->

   <!-- Ensure activation at workbench startup so the server starts automatically -->
   <extension
         point="org.eclipse.ui.startup">
      <startup
            class="ru.cinimex.archimatetool.mcp.Startup">
      </startup>
   </extension>

   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            class="ru.cinimex.archimatetool.mcp.preferences.MCPPreferencePage"
            id="ru.cinimex.archimatetool.mcp.preferences"
            name="MCP">
      </page>
   </extension>

   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="ru.cinimex.archimatetool.mcp.preferences.MCPPreferenceInitializer">
      </initializer>
   </extension>

   <extension
         point="org.eclipse.ui.commands">
      <category id="ru.cinimex.archimatetool.mcp.category" name="Archi MCP"/>
      <command
            id="ru.cinimex.archimatetool.mcp.commands.toggleServer"
            name="MCP Server"
            categoryId="ru.cinimex.archimatetool.mcp.category">
         <state
               id="org.eclipse.ui.commands.toggleState"
               class="org.eclipse.ui.handlers.RegistryToggleState">
         </state>
      </command>
   </extension>

   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="ru.cinimex.archimatetool.mcp.ui.ToggleServerHandler"
            commandId="ru.cinimex.archimatetool.mcp.commands.toggleServer">
      </handler>
   </extension>

   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="ru.cinimex.archimatetool.mcp.toolbar"
               label="MCP">
            <command
                  commandId="ru.cinimex.archimatetool.mcp.commands.toggleServer"
                  label="MCP"
                  style="toggle"
                  tooltip="Start/Stop MCP Server">
            </command>
         </toolbar>
      </menuContribution>
   </extension>

</plugin>
